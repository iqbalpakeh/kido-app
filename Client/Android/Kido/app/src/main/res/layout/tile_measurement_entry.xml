<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:padding="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center|left"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/info_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 year 2 month 3 days"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/history_item_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body Height 50.0 cm"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_secondary_dark"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/history_item_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Head Circumference 25.0 cm"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_secondary_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/history_item_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body Weight 7.9 kg"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_secondary_dark"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/ic_action_overflow" />

    </LinearLayout>

</LinearLayout>