<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/disease_timestamp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|left"
                android:text="Thursday, 16 September 2014"
                android:textColor="@color/pink"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/ic_action_overflow" />

        </LinearLayout>

        <TextView
            android:id="@+id/disease_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:paddingTop="16dp"
            android:text="Name"
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/disease_name_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:textColor="@color/text_secondary_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/disease_symptom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:paddingTop="16dp"
            android:text="Symptom"
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/disease_symptom_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:textColor="@color/text_secondary_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/disease_treatment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:paddingTop="16dp"
            android:text="Treatment"
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/disease_treatment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:textColor="@color/text_secondary_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/disease_notes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:paddingTop="16dp"
            android:text="Notes"
            android:textColor="@color/text_primary_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/disease_notes_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:paddingTop="4dp"
            android:textColor="@color/text_secondary_dark"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/card_shadow" />

    </LinearLayout>

</LinearLayout>